<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PermissionActivity"
    android:orientation="vertical"
    android:background="@color/blueGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <RelativeLayout
            android:id="@+id/image_container"
            android:layout_gravity="center_horizontal"
            android:layout_width="160dp"
            android:layout_height="160dp">
            <ImageView
                android:id="@+id/img_sun"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_sun"/>
            <ImageView
                android:id="@+id/img_cloud1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_cloud1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:id="@+id/img_cloud2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_cloud2"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/text_welcome"
            android:layout_marginTop="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/permission_welcome"
            android:textColor="@color/textPrimaryInverse"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/text_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_below="@+id/text_welcome"
            android:text="@string/permission_message"
            android:textColor="@color/textSecondaryInverse"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="normal"/>

        <Button
            android:id="@+id/button_accept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:letterSpacing="0.2"
            android:background="@drawable/rounded_btn_background"
            android:text="@string/permission_button"
            android:textColor="@color/white"
            android:shadowColor="@color/sunriseColor1"
            android:outlineAmbientShadowColor="@color/sunriseColor1"
            android:outlineSpotShadowColor="@color/sunriseColor1" />

    </LinearLayout>
</LinearLayout>