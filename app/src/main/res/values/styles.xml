    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="primaryColor">@color/dayPrimary</item>
        <item name="secondaryColor">@color/daySecondary</item>

        <item name="textColorPrimary">@color/textPrimary</item>
        <item name="textColorSecondary">@color/textSecondary</item>
        <item name="textColorPrimaryInverse">@color/textPrimaryInverse</item>
        <item name="textColorSecondaryInverse">@color/textSecondaryInverse</item>

        <item name="backgroundPrimary">@color/white</item>
        <item name="backgroundSecondary">@color/lightGray</item>
        <item name="backgroundColored">@color/dayBGColored</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="colorPrimary">@color/dayPrimary</item>
        <item name="colorPrimaryDark">@color/daySecondary</item>
        <item name="colorAccent">@color/dayPrimary</item>

        <!-- MaterialDrawer specific values -->
