        <item name="textColorSecondaryInverse">@color/textSecondaryInverse</item>

        <item name="backgroundPrimary">@color/white</item>
        <item name="backgroundSecondary">@color/lightGray</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="colorPrimary">@color/dayPrimary</item>
        <item name="colorPrimaryDark">@color/daySecondary</item>
        <item name="colorAccent">@color/dayPrimary</item>
    </style>

